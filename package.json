{
  "name": "portfolio-platform",
  "version": "1.0.0",
  "description": "Enterprise-grade portfolio platform with Astro + Microfrontends",
  "private": true,
  "author": "Jorge Adolfo Febres Cabrera",
  "license": "MIT",
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "install-all": "pnpm install",
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "lint": "pnpm -r run lint",
    "format": "prettier --write \"**/*.{ts,tsx,astro,vue,json,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,astro,vue,json,md,yaml,yml}\"",
    "test": "pnpm -r run test",
    "test:coverage": "pnpm -r run test:coverage",
    "type-check": "pnpm -r run type-check",
    "clean": "pnpm -r --parallel exec rm -rf dist node_modules .eslintcache",
    "clean:all": "pnpm clean && rm -rf pnpm-lock.yaml"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.3.3"
    }
  }
}
